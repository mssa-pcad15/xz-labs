@page "/mortgage"

<MudGrid>
    <MudItem xs="12">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8">
            <MudNumericField @bind-Value="LoanDurationInYear" Min="0" Max="50" Label="Loan duration (in years)" Variant="Variant.Outlined" Step="5M" />
            @* place loan principal and interest rate element here *@
            <MudSlider @bind-Value="PrincipalAmount" 
                Min="100000" 
                Max="2000000" 
                TickMarks="true" Step="100000" Color="Color.Info">Principal: @PrincipalAmount.ToString("C0")
            </MudSlider>

        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8"></MudPaper>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudPaper Class="d-flex align-center justify-center mud-width-full py-8"></MudPaper>
    </MudItem>
</MudGrid>

@code {
    public decimal LoanDurationInYear { get; set; }
    public decimal PrincipalAmount { get; set; }


}
